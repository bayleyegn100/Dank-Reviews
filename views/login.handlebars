<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>Login!</h2>
            <form class="login-form">
                <div class="form-group row">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email-login" name="login"
                        placeholder="email@example.com">
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password-login" name="login" placeholder="Password">
                </div>
                <button class="btn btn-primary login-form" type="submit">Login</button>
            </form>
        </div>

        <div class="col-md-2"></div>

        <div class="col-md-5">
            <h2>Sign Up!</h2>
            <form class="signup-form">
                <div class="form-group row">
                    <label for="inputName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="name-signup" name="signup" placeholder="First name">
                </div>
                <div class="form-group row">
                    <label for="inputName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="name-signup" name="signup" placeholder="Last name">
                </div>
                <div class="form-group row">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email-signup" name="email-signup"
                        placeholder="email@example.com">
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password-signup" name="password-signup"
                        placeholder="Password">
                </div>
                <button class="btn btn-primary signup-form" type="submit">Sign Up</button>
            </form>
        </div>
    </div>
</div>
<script src="../js/login.js"></script>