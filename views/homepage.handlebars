<div class="container">
    <div class="row image-of-day">
        <div class="col-2"></div>
        <div class="col-8">
            <img src="{{image.image}}" alt="" max-width="100%" max-height="100%" class="center" id="currentImage">
        </div>
        <div class="col-2"></div>
    </div>
    {{!-- section where you write posts IF logged in. --}}
    {{#if logged_in}}
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <h3>Write a review!</h3>
        <div class="form-group">
            <label for="review">Review:</label>
            <textarea class="form-input" id="reviewText" name="review"></textarea>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary center" id="review">Create</button>
        </div>
    </div>
        <div class="col-4"></div>
    </div>
    {{else}}
    <h3>Login or Create a Profile to Write Reviews!</h3>
    {{/if}}

    {{#each reviews as |review|}}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-7">
            <div class="card mb-12 homepage-review" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{review.image_link}}"
                            class="card-img redditImage" alt="Cute cats!">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-header">Review by {{review.user.name}}</h4>
                            <p class="card-text">{{review.context}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
    {{/each}}
</div>

<script src="../js/homepage.js"></script>