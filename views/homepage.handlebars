<div class="container">
<div class="row image-of-day">
    <div class="col-2"></div>
    <div class="col-md-8">
        <img src="https://b.thumbs.redditmedia.com/_12eJQb6IEoRj6L4wjPGBSsv4ViFXdosg9bp6NvilbA.jpg" alt="Image of the day">
        <!-- this is a place holder for our reddit link -->
        {{!-- {{#fetch redditimage}} --}}

    
    </div>
    <div class="col-2"></div>
</div>
{{!-- section where you write posts IF logged in. --}}
{{#if logged_in}}
<div class="row">
<h3>Write a review!</h3>
    <div class="form-group">
        <label for="review">review:</label>
        <textarea class="form-input" id="reviewText" name="review"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="review">Create</button>
    </div>
</div>
{{else}}
<h3>Login or Create a Profile to Write Reviews!</h3>
{{/if}}
    

{{#each reviews as |review|}}
<div class="row sm-4 review">
    <div class="col-10-md-">
        <p>Created by {{review.user.name}}</p>
        <p>{{review.context}}</p>
    </div>
</div>
{{/each}}
</div>
