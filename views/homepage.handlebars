<div class="container d-flex flex-wrap">
    <div class="image-of-day col-md-9">
        <div>
            <img src="{{image.image}}" alt="" width="100vh" height="100%" class="center" id="currentImage">
        </div>
        {{!-- section where you write posts IF logged in. --}}
        {{#if logged_in}}
        <div>
            <h3>Write a review!</h3>
            <div class="form-group col-md-12">
                <textarea class="form-input" id="reviewText" rows=15 name="review"></textarea>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary center" id="review">Create</button>
            </div>
        </div>
        {{else}}
        <h3>Login or Create a Profile to Write Reviews!</h3>
        {{/if}}
    </div>


    <div class="col-md-3">
        {{#each reviews as |review|}}
        <div class="row">
            <div class="homepage-review">
                <div class="row no-gutters card mt-2 mb-2">
                    <div class="col-4 d-flex">
                        <img src="{{review.image_link}}" class="card-img redditImage" alt="Cute cats!">
                        <h4 class="card-header">Review by {{review.user.name}}</h4>
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <p class="card-text">{{review.context}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="../js/homepage.js"></script>